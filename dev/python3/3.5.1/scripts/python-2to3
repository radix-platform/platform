#!/bin/sh

program=$0
prgpath=$(cd $(dirname $program) ; pwd -P)

( cd $prgpath
  rm -f 2to3          ; ln -sf 2to3-3.5         2to3
  rm -f idle          ; ln -sf idle3            idle
  rm -f pydoc         ; ln -sf pydoc3           pydoc
  rm -f pynche        ; ln -sf pynche3          pynche
  rm -f msgfmt.py     ; ln -sf msgfmt-3.5.py    msgfmt.py
  rm -f pygettext.py  ; ln -sf pygettext-3.5.py pygettext.py
  rm -f python        ; ln -sf python3          python
  rm -f python-config ; ln -sf python3-config   python-config
)
